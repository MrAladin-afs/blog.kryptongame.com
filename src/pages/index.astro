  <!-- Hero Banner Section - Start from top with negative margin to account for fixed header -->
  <section
    class="relative w-full h-screen overflow-hidden -mt-[120px] pt-[120px]"
  >
    <!-- Background Image -->
    <div
      class="absolute inset-0 bg-cover bg-center bg-no-repeat"
      style={`background-image: url(${heroImage.src})`}
    >
