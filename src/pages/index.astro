---
import BaseLayout from "@/layouts/base.astro";
import { getEntry } from "astro:content";
import Headlines from "@/pages/_home/headlines.astro";
import LatestNews from "@/pages/_home/latestNews.astro";

const entry = await getEntry("views", "home");

if (!entry) {
  return Astro.redirect("/404");
}
---

<BaseLayout entry={entry}>
  <!-- Headlines Section with extra spacing -->
  <div class="py-8">
    <Headlines />
  </div>

  <!-- Divider after headlines -->
  <div class="border-t border-gray-200 dark:border-gray-700 my-8"></div>

  <!-- Latest News Section with extra spacing -->
  <div class="py-8">
    <LatestNews />
  </div>
</BaseLayout>
