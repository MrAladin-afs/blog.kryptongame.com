      <!-- Dark overlay for better text readability -->
      <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <!-- Content Overlay -->
    <div class="relative z-10 h-full flex items-center justify-center">
      <div class="container mx-auto px-4 text-center text-white">
        <div class="max-w-4xl mx-auto">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
            Welcome to Krypton Game
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-200">
            Your Ultimate FiveM Gaming Experience
          </p>
          <div class="mb-8 max-w-2xl mx-auto">
            <a
              href="https://kryptongame.com"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-3 px-8 py-4 bg-white text-purple-700 font-bold text-lg rounded-lg hover:bg-blue-50 transition-all duration-300 transform hover:scale-105 shadow-lg"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                ></path>
              </svg>
              Visit kryptongame.com
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Headlines />
  <LatestNews />

  <!-- Discord Widget Section -->
  <section class="container mx-auto py-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <!-- Discord Widget -->
      <div class="flex justify-center lg:justify-start">
        <iframe
          src="https://discord.com/widget?id=1375424780790141009&theme=dark"
          width="350"
          height="500"
          allowtransparency="true"
          frameborder="0"
          sandbox="allow-popups allow-popups-to-escape-sandbox allow-same-origin allow-scripts"
          class="rounded-lg shadow-lg"></iframe>
      </div>

      <!-- Title and Description -->
      <div class="text-center lg:text-left space-y-6">
        <div>
          <h2 class="text-3xl lg:text-4xl font-bold font-serif mb-4">
            Join Our Community
          </h2>
          <p class="text-lg text-base-content/80 leading-relaxed">
            Connect with fellow developers, share your projects, and stay
            updated with the latest news and discussions in our Discord server.
          </p>
        </div>

        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
            <span class="text-base-content/70">Real-time discussions</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
            <span class="text-base-content/70">Share your projects</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
            <span class="text-base-content/70">Get help and support</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-2 h-2 bg-orange-500 rounded-full"></div>
            <span class="text-base-content/70">Latest updates and news</span>
          </div>
        </div>

        <div class="pt-4">
          <a
            href="https://discord.gg/your-invite-link"
            target="_blank"
            class="inline-flex items-center gap-2 px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
