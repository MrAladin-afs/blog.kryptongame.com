---
import { NAVIGATION_LINKS, SOCIAL_LINKS, OTHER_LINKS } from "@/lib/config";
import Hashtag from "@/assets/svgs/hashtag.astro";
import Icon from "../bases/icon.astro";
---

<footer class="footer bg-black border-t border-gray-700 py-6">
  <div class="container relative">
    <!-- Top section with navigation and button aligned -->
    <div class="w-full flex justify-between items-baseline mb-4">
      <nav
        class="flex flex-col gap-4 lg:flex-row lg:flex-wrap text-base lg:text-sm font-semibold"
      >
        <a href="/" class="link link-hover text-white hover:text-blue-400"
          >Home</a
        >
        <a
          href="/articles"
          class="link link-hover text-white hover:text-blue-400">Articles</a
        >
        {
          NAVIGATION_LINKS.map(({ href, text, target }) => (
            <a
              href={href}
              class="link link-hover text-white hover:text-blue-400"
              target={target ?? "_self"}
            >
              {text}
            </a>
          ))
        }
      </nav>
      <a
        href="https://discord.com/invite/B4Pjx7tdc2"
        target="_blank"
        rel="noopener noreferrer"
        class="bg-purple-500 hover:bg-purple-600 text-white px-6 py-2 rounded-lg font-semibold transition-colors duration-200"
      >
        Submit Your Content
      </a>
    </div>

    <div class="divider w-full h-1 bg-gray-700"></div>

    <!-- Social media section -->
    <div class="flex gap-4 mb-4">
      <p class="font-bold text-white">Social Media:</p>
      <ul class="flex flex-wrap gap-4">
        {
          SOCIAL_LINKS.map(({ href, icon, text, target }) => (
            <li>
              <a
                href={href}
                class="link link-hover text-white hover:text-blue-400"
                target={target ?? "_blank"}
                title={text}
                aria-label={text}
              >
                <Icon icon={icon} />
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <!-- Bottom section with links on left and logo on right -->
    <div class="w-full flex justify-between items-end">
      <div class="flex flex-wrap gap-4 text-xs">
        {
          OTHER_LINKS.map(({ href, text, target }) => (
            <a
              href={href}
              class="link link-hover text-white hover:text-blue-400"
              target={target ?? "_self"}
            >
              {text}
            </a>
          ))
        }
      </div>
      <img
        src="https://files.fivemerr.com/images/ac6462c4-e383-4afb-97a2-e6be2e9c7294.png"
        alt="Krypton Game Logo"
        class="h-12 w-auto mr-8"
      />
    </div>
  </div>
</footer>
